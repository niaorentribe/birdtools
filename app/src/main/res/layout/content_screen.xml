<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/base_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zhiniao.birdtools.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <include layout="@layout/divider_wide"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_marginRight="@dimen/item_padding">
        <TextView
            android:id="@+id/screen_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height_40"
            android:gravity="center_vertical"
            android:textSize="@dimen/item_title"
            android:text="@string/screen_title"/>
        <RelativeLayout
            android:layout_below="@id/screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/screen_ic"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_marginTop="@dimen/item_padding"
                android:src="@mipmap/ic_screen"/>
            <LinearLayout
                android:layout_toRightOf="@id/screen_ic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_padding"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/screen_size"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:text="@string/screen_size"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/screen_real_size"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:text="@string/screen_real_size"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/screen_density"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_32"
                    android:text="@string/screen_density"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/divider_wide"/>
</LinearLayout>
